{
  "manifest_version": 2,
  "name": "Github Markdown Live Preview",
  "description": "Chrome extension that shows a live preview when using Markdown on Github.",
  "version": "0.2.0",
  "minimum_chrome_version": "58",
  "permissions": [
    "*://github.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://github.com/*",
        "*://gist.github.com/*"
      ],
      "js": [
        "lib/showdown/showdown.min.js",
        "lib/sanitize-html/sanitize-html.min.js",
        "contentScript.js"
      ],
      "css": [
        "contentScript.css"
      ]
    }
  ]
}


